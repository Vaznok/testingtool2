<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="create_permissions" author="Vitalii_Vlasenko">
        <createTable tableName="permissions">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="permission" type="varchar(30)">
                <constraints nullable="false" unique="true" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create_roles" author="Vitalii_Vlasenko">
        <createTable tableName="roles">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="role" type="varchar(30)">
                <constraints nullable="false" unique="true" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create_permissions_roles" author="Vitalii_Vlasenko">
        <createTable tableName="permissions_roles">
            <column name="permission_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_permission_id" references="permissions(id)"/>
            </column>
            <column name="role_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_role_id" references="roles(id)" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create_users" author="Vitalii_Vlasenko">
        <createTable tableName="users">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="email" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(40)">
                <constraints nullable="false" />
            </column>
            <column name="enabled" type="boolean" defaultValueBoolean="true">
                <constraints nullable="false" />
            </column>
            <column name="first_name" type="varchar(30)">
                <constraints nullable="true" />
            </column>
            <column name="last_name" type="varchar(30)">
                <constraints nullable="true" />
            </column>
            <column name="city" type="varchar(30)">
                <constraints nullable="true" />
            </column>
            <column name="birthday" type="date">
                <constraints nullable="true" />
            </column>
            <column name="gender" type="varchar(10)">
                <constraints nullable="true" />
            </column>
            <column name="mobile_phone" type="varchar(25)">
                <constraints nullable="false" />
            </column>
            <column name="role_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_role_id_user" references="roles(id)" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="tag-1.0.0" author="Vitalii_Vlasenko">
        <tagDatabase tag="1.0.0" />
    </changeSet>

</databaseChangeLog>
